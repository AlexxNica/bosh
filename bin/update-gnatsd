#!/bin/bash
set -e -x

installation_directory=$(dirname $0)/../src/go/src/github.com/nats-io

rm -rf $installation_directory/gnatsd
mkdir -p $installation_directory

pushd $installation_directory

git clone https://github.com/cloudfoundry/gnatsd.git

pushd gnatsd
git checkout bosh-gnatsd

sha=$(git rev-parse --short HEAD)

rm -rf .git

popd
popd

echo >$(dirname $0)/../gnatsd-version.txt $sha
